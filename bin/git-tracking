#!/bin/sh

branch="`git branch | grep '^\*' | cut -d ' ' -f 2`"
echo "$branch" | grep "(" --quiet && exit 1
remote="`git config \"branch.$branch.remote\"`"
test -z "$remote" && exit 1
merge="`git config \"branch.$branch.merge\" | awk -F/ '{print $NF}'`"
test -z "$merge" && exit 1
if [ -z "$remote" ] || [ "$remote" = "." ]; then
  echo "$merge"
else
  echo "$remote/$merge"
fi
exit 0
