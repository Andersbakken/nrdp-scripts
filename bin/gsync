#!/bin/bash

sync=`which git-sync`
test -z "$sync" && sync="git pull"
lsdev=`which lsdev.pl`

srcRoot=
if [ -n "$lsdev" ]; then 
    if [ -n "$1" ]; then
        dir="`$lsdev $1`"
    elif [ ! -n "`$lsdev -p`" ]; then
        dir="`$lsdev`"
    fi
    [ -n "$dir" ] && cd "$dir"
    if [ -n "`$lsdev -p`" ]; then
        root="`$lsdev -r src`"
        [ -n "$root" ] && srcRoot="$root"
    fi
else
    srcRoot=`pwd`
fi
find "$srcRoot" -maxdepth 4 -type d -name ".git" | while read i; do
    cd $i/.. && "$sync";
done
