#!/bin/bash

function syncdir
{
    cd "$1"
    GITDIR=`git rev-parse --git-dir`
    ROOTDIR=`cd $GITDIR/.. && pwd`
    if [ -d "$GITDIR/refs/remotes/p4" ]; then
        git p4 sync
        return;
    fi

    if [ -n "$autostash" ] && git status --porcelain | grep "^ *M" --quiet; then
        stashed=1
        git stash
    fi

    if git config -l | grep "^svn-remote" --quiet; then
        git svn update
    else
        git pull
    fi

    if [ -n "$stashed" ]; then
        git stash pop
    fi
}

idx=0
if [ "`git config sync.autostash`" = "true" ]; then
    autostash=1
fi
while [ -n "$1" ]; do
    case "$1" in
        -r|--recursive)
            recursive=1
            ;;
        --autostash|-a)
            autostash=1
            ;;
        --no-autostash)
            autostash=
            ;;
        *)
            if [ -d "$1" ]; then
                dirs[$idx]="$1"
                idx=`expr $idx + 1`
            else
                echo "$1 is not a directory"
            fi
            ;;
    esac
    shift
done
if [ $idx -eq 0 ]; then
    idx=1
    dirs[0]=`pwd`
fi

i=0
while [ $i -lt $idx ]; do
    syncdir "${dirs[$i]}"
    if [ -n "$recursive" ]; then
        find -L "${dirs[$1]}" -mindepth 1 -maxdepth 4 -type d -name ".git" | while read i; do syncdir "$i/.."; done
    fi
    i=`expr $i + 1`
done
