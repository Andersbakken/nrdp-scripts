#!/bin/bash

file=
mode=paste
while [ "$#" -gt 0 ]; do
  case "$1" in
  --append|-a) mode=paste_append ;;
  --copy|-c) mode=copy ;;
  *) file="$1"
  esac
  shift
done

if [ `uname -s` = "Darwin" ]; then
    if [ -z "$file" ]; then
        if [ "$mode" = "copy" ]; then
            pbcopy
        else
            pbpaste
        fi
    elif [ "$mode" = "paste" ]; then
        pbpaste > "$file"
    elif [ "$mode" = "paste_append" ]; then
        pbpaste >> "$file"
    elif [ "$mode" = "copy" ]; then
        cat "$file" | pbcopy
    fi
else
    xclip=`which xclip`
    test -z "$xclip" && xclip="/usr/X11R6/bin/xclip"
    if ! test -x "$xclip"; then
        echo "No XCLIP!"
        exit 1
    fi
    if [ -z "$file" ]; then
        if [ "$mode" = "copy" ]; then
            "$xclip" -i
        else
            "$xclip" -o
        fi
    elif [ "$mode" = "paste" ]; then
        "$xclip" -o > "$file"
    elif [ "$mode" = "paste_append" ]; then
        "$xclip" -o >> "$file"
    fi
fi

