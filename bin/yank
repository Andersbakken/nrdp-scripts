#!/bin/bash
xclip=`which xclip`
test -z "$xclip" && xclip="/usr/X11R6/bin/xclip"
if ! test -x "$xclip"; then
   echo "No XCLIP!"
   exit 1
fi


append=0
if [ -n "$1" ]; then
    if [ "$1" = "--append" ]; then
        append=1
    elif [ "$1" = "-a" ]; then
        append=1
    else
        target="$1"
    fi
    if [ -n "$2" ]; then
        if [ "$2" = "--append" ]; then
            append=1
        elif [ "$2" = "-a" ]; then
            append=1
        else
            target="$2"
        fi
    fi
fi

if [ -z "$target" ]; then
    xclip -o
    exit 0
elif [ "$append" -eq 0 ]; then
    xclip -o > "$target"
else
    xclip -o >> "$target"
fi
echo " " >> $target

