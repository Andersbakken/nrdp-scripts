#!/bin/bash

[ -z "$JIRAHOST" ] && export JIRAHOST="http://jira.netflix.com"
[ -z "$JIRAUSER" ] && export JIRAUSER=`whoami`
if [ -x "$JIRACLIPATH/jira.sh" ]; then
    ARGS=
    if [ -n "$JIRAHOST" ]; then
       ARGS="$ARGS --user $JIRAUSER --server $JIRAHOST"
    fi
    $JIRACLIPATH/jira.sh $ARGS "$@"
else
    echo "Need to get your jira together!"
    exit 1
fi
